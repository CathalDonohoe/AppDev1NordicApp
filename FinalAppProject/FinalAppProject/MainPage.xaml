<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FinalAppProject"
             x:Class="FinalAppProject.MainPage">

    <ScrollView>

            <StackLayout HorizontalOptions="Center"
                     VerticalOptions="Center"
                     BackgroundColor="Black">
                <Image x:Name="bckgrndImage" Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"></Image>



                <Button x:Name="btnGods" Text="Click to Enter Gods Page"
                   Margin="10, 5, 10, 10"
                   Clicked="btnGods_Clicked"
                            BackgroundColor="White"/>

                <Button x:Name="btnRagnarok" Text="Click to Enter Ragnarok Page"
                        Margin="10, 5, 10, 10"
                        Clicked="btnRagnarok_Clicked"
                        BackgroundColor="White"/>

                <Button x:Name="btnContact" Text="Click to Enter Contact Page"
                        Margin="10, 5, 10, 10"
                        Clicked="btnContact_Clicked"
                        BackgroundColor="white"/>

            </StackLayout>
    </ScrollView>



</ContentPage>
